@model AddPasswordViewModel
@inject IViewLocalizer localizer

<h2 class="text-center">Add Local Password</h2>
<hr />
<div class="mu-contact-content">
    <div class="row mb-5">

        <div class="col-md-12">
            <div class="mu-contact-form-area">
                <div id="form-messages"></div>
                <form class="mu-contact-form" asp-controller="Account" asp-action="AddPassword">

                    <div class="form-group">
                        <span class="fa fa-user mu-contact-icon"></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="@localizer["Password"]">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="mu-send-msg-btn"><span>@localizer["Submit"]</span></button>
                </form>
            </div>
        </div>

    </div>
</div>

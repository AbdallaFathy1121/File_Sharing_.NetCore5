@model ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        <strong>@TempData["Message"]</strong>
    </div>
}

<!-- Start Contact -->
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area pt-4 pb-5">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>Say Hello!</h2>
                                <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa cum sociis.</p>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" class="mu-contact-form">

                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input asp-for="Name" type="text" class="form-control" placeholder="Name" id="name" name="name" required>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" id="email" name="email" required>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-folder-open-o mu-contact-icon"></span>
                                            <input asp-for="Subject" type="text" class="form-control" placeholder="Your Subject" id="subject" name="subject" required>
                                            <span asp-validation-for="Subject" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-pencil-square-o mu-contact-icon"></span>
                                            <textarea asp-for="Message" class="form-control" placeholder="Message" id="message" name="message" required></textarea>
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="mu-send-msg-btn"><span>Send Message</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Contact -->
